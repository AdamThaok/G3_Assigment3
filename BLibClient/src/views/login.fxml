<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox spacing="20" alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.LoginController" style="-fx-background-color: linear-gradient(to bottom, #4facfe, #00f2fe);">
    <Label text="Library Login" style="-fx-font-size: 24px; -fx-text-fill: white; -fx-font-weight: bold;" />
    
    <VBox spacing="10" alignment="CENTER" maxWidth="300">
        <TextField fx:id="usernameField" promptText="Username" style="-fx-background-radius: 10; -fx-padding: 10; -fx-font-size: 14;" />
        <PasswordField fx:id="passwordField" promptText="Password" style="-fx-background-radius: 10; -fx-padding: 10; -fx-font-size: 14;" />
    </VBox>

    <VBox spacing="10" alignment="CENTER">
        <Button text="Login" onAction="#handleLogin" style="-fx-background-color: #0078d7; -fx-text-fill: white; -fx-font-size: 16; -fx-background-radius: 20; -fx-padding: 10;" />
        <Button text="Search as Guest" onAction="#navigateToSearch" style="-fx-background-color: #00b894; -fx-text-fill: white; -fx-font-size: 16; -fx-background-radius: 20; -fx-padding: 10;" />
    </VBox>

    <Label text="Welcome to the Library System!" style="-fx-font-size: 14px; -fx-text-fill: white;" />
</VBox>

